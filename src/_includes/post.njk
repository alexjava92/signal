---
layout: base.njk
---
<a href="{{ '/' | url }}" class="back">← назад</a>
<article>
  <header>
    <time datetime="{{ date }}">{{ date | dateDisplay }}</time> · <span class="reading-time">{{ content | readingTime }}</span>
    <h1>{{ title }}</h1>
  </header>
  <div class="content">
    {{ content | safe }}
  </div>
</article>
