  let currentTab = 'letters';
  let analysisData = null;

  // --- Analysis functions ---

  function analyze(text) {
    if (!text.trim()) return null;

    const chars = text.length;
    const letterFreq = {};
    const wordFreq = {};
    const bigramFreq = {};

    // Letter frequencies
    const letters = text.toLowerCase().replace(/[^a-zа-яёa-z]/gi, '');
    for (const ch of letters) {
      letterFreq[ch] = (letterFreq[ch] || 0) + 1;
    }

    // Word frequencies
    const words = text.toLowerCase().match(/[a-zа-яё]+/gi) || [];
    for (const w of words) {
      wordFreq[w] = (wordFreq[w] || 0) + 1;
    }

    // Bigram frequencies (letter pairs)
    const cleanLetters = text.toLowerCase().replace(/[^a-zа-яё]/gi, '');
    for (let i = 0; i < cleanLetters.length - 1; i++) {
      const bg = cleanLetters[i] + cleanLetters[i + 1];
      bigramFreq[bg] = (bigramFreq[bg] || 0) + 1;
    }

    // Shannon entropy
    const totalLetters = letters.length;
    let entropy = 0;
    if (totalLetters > 0) {
      for (const ch in letterFreq) {
        const p = letterFreq[ch] / totalLetters;
        if (p > 0) entropy -= p * Math.log2(p);
      }
    }

    // Sort
    const sortedLetters = Object.entries(letterFreq).sort((a, b) => b[1] - a[1]);
    const sortedWords = Object.entries(wordFreq).sort((a, b) => b[1] - a[1]);
    const sortedBigrams = Object.entries(bigramFreq).sort((a, b) => b[1] - a[1]);

    return {
      chars,
      wordCount: words.length,
      uniqueWords: new Set(words).size,
      entropy: entropy.toFixed(2),
      letters: sortedLetters,
      words: sortedWords,
      bigrams: sortedBigrams,
      totalLetters
    };
  }

  // --- Drawing functions ---

  const COL = '#7b8cde';
  const COL_DIM = '#6a6a7a';
  const COL_BG = '#0a0a0f';
  const COL_GRID = '#1a1a2a';

  function clear() {
    ctx.fillStyle = COL_BG;
    ctx.fillRect(0, 0, canvas.width, canvas.height);
  }

  function drawBarChart(data, maxBars, labelKey) {
    clear();
    if (!data || data.length === 0) {
      ctx.fillStyle = COL_DIM;
      ctx.font = '14px monospace';
      ctx.textAlign = 'center';
      ctx.fillText('нет данных', canvas.width / 2, canvas.height / 2);
      return;
    }

    const slice = data.slice(0, maxBars);
    const maxVal = slice[0][1];

    const padL = 50, padR = 20, padT = 30, padB = 50;
    const chartW = canvas.width - padL - padR;
    const chartH = canvas.height - padT - padB;
    const barW = Math.max(2, (chartW / slice.length) - 2);
    const gap = (chartW - barW * slice.length) / (slice.length + 1);

    // Grid lines
    ctx.strokeStyle = COL_GRID;
    ctx.lineWidth = 0.5;
    for (let i = 0; i <= 4; i++) {
      const y = padT + (chartH / 4) * i;
      ctx.beginPath();
      ctx.moveTo(padL, y);
      ctx.lineTo(canvas.width - padR, y);
      ctx.stroke();

      ctx.fillStyle = COL_DIM;
      ctx.font = '10px monospace';
      ctx.textAlign = 'right';
      const val = maxVal * (1 - i / 4);
      ctx.fillText(labelKey === 'pct'
        ? (val / analysisData.totalLetters * 100).toFixed(1) + '%'
        : Math.round(val), padL - 8, y + 4);
    }

    // Bars
    for (let i = 0; i < slice.length; i++) {
      const [label, count] = slice[i];
      const x = padL + gap + i * (barW + gap);
      const h = (count / maxVal) * chartH;
      const y = padT + chartH - h;

      const alpha = 0.3 + 0.7 * (count / maxVal);
      ctx.fillStyle = `rgba(123, 140, 222, ${alpha})`;
      ctx.fillRect(x, y, barW, h);

      // Label
      ctx.fillStyle = COL;
      ctx.font = `${Math.min(11, barW)}px monospace`;
      ctx.textAlign = 'center';
      ctx.save();
      if (barW < 14 && slice.length > 30) {
        ctx.translate(x + barW / 2, padT + chartH + 8);
        ctx.rotate(Math.PI / 3);
        ctx.fillText(label, 0, 0);
      } else {
        ctx.fillText(label, x + barW / 2, padT + chartH + 16);
      }
      ctx.restore();
    }

    // Title
    ctx.fillStyle = COL_DIM;
    ctx.font = '11px monospace';
    ctx.textAlign = 'center';
    const titles = {
      letters: `топ-${slice.length} букв`,
      words: `топ-${slice.length} слов`,
      bigrams: `топ-${slice.length} биграмм`
    };
    ctx.fillText(titles[currentTab] || '', canvas.width / 2, 18);
  }

  function drawZipf() {
    clear();
    if (!analysisData || analysisData.words.length < 2) {
      ctx.fillStyle = COL_DIM;
      ctx.font = '14px monospace';
      ctx.textAlign = 'center';
      ctx.fillText('нет данных', canvas.width / 2, canvas.height / 2);
      return;
    }

    const words = analysisData.words;
    const padL = 60, padR = 30, padT = 40, padB = 50;
    const chartW = canvas.width - padL - padR;
    const chartH = canvas.height - padT - padB;

    const maxRank = words.length;
    const maxFreq = words[0][1];

    const logMaxRank = Math.log10(maxRank);
    const logMaxFreq = Math.log10(maxFreq);

    // Grid
    ctx.strokeStyle = COL_GRID;
    ctx.lineWidth = 0.5;
    ctx.fillStyle = COL_DIM;
    ctx.font = '10px monospace';

    // Y axis (log freq)
    for (let i = 0; i <= Math.ceil(logMaxFreq); i++) {
      const y = padT + chartH - (i / logMaxFreq) * chartH;
      ctx.beginPath(); ctx.moveTo(padL, y); ctx.lineTo(canvas.width - padR, y); ctx.stroke();
      ctx.textAlign = 'right';
      ctx.fillText('10^' + i, padL - 8, y + 4);
    }

    // X axis (log rank)
    for (let i = 0; i <= Math.ceil(logMaxRank); i++) {
      const x = padL + (i / logMaxRank) * chartW;
      ctx.beginPath(); ctx.moveTo(x, padT); ctx.lineTo(x, padT + chartH); ctx.stroke();
      ctx.textAlign = 'center';
      ctx.fillText('10^' + i, x, padT + chartH + 16);
    }

    // Data points
    for (let i = 0; i < words.length; i++) {
      const rank = i + 1;
      const freq = words[i][1];
      const x = padL + (Math.log10(rank) / logMaxRank) * chartW;
      const y = padT + chartH - (Math.log10(freq) / logMaxFreq) * chartH;

      ctx.fillStyle = COL;
      ctx.globalAlpha = 0.6;
      ctx.beginPath();
      ctx.arc(x, y, 2.5, 0, Math.PI * 2);
      ctx.fill();
    }
    ctx.globalAlpha = 1;

    // Ideal Zipf line: freq = C / rank, so log(freq) = log(C) - log(rank)
    const C = words[0][1];
    ctx.strokeStyle = '#de7b7b';
    ctx.lineWidth = 1;
    ctx.setLineDash([4, 4]);
    ctx.beginPath();
    for (let r = 1; r <= maxRank; r++) {
      const idealFreq = C / r;
      if (idealFreq < 1) break;
      const x = padL + (Math.log10(r) / logMaxRank) * chartW;
      const y = padT + chartH - (Math.log10(idealFreq) / logMaxFreq) * chartH;
      if (r === 1) ctx.moveTo(x, y); else ctx.lineTo(x, y);
    }
    ctx.stroke();
    ctx.setLineDash([]);

    // Labels
    ctx.fillStyle = COL_DIM;
    ctx.font = '11px monospace';
    ctx.textAlign = 'center';
    ctx.fillText('закон Ципфа — log-log график', canvas.width / 2, 20);

    ctx.textAlign = 'left';
    ctx.fillText('ранг →', padL + chartW - 50, padT + chartH + 35);
    ctx.save();
    ctx.translate(14, padT + chartH / 2);
    ctx.rotate(-Math.PI / 2);
    ctx.textAlign = 'center';
    ctx.fillText('частота →', 0, 0);
    ctx.restore();

    // Legend
    ctx.fillStyle = COL;
    ctx.fillRect(canvas.width - padR - 130, padT + 5, 8, 8);
    ctx.fillStyle = COL_DIM;
    ctx.font = '10px monospace';
    ctx.textAlign = 'left';
    ctx.fillText('данные', canvas.width - padR - 118, padT + 13);

    ctx.strokeStyle = '#de7b7b';
    ctx.setLineDash([4, 4]);
    ctx.beginPath();
    ctx.moveTo(canvas.width - padR - 130, padT + 25);
    ctx.lineTo(canvas.width - padR - 122, padT + 25);
    ctx.stroke();
    ctx.setLineDash([]);
    ctx.fillText('идеальный Ципф', canvas.width - padR - 118, padT + 29);

    // Top-3 words annotation
    ctx.fillStyle = COL;
    ctx.font = '10px monospace';
    for (let i = 0; i < Math.min(3, words.length); i++) {
      const rank = i + 1;
      const freq = words[i][1];
      const x = padL + (Math.log10(rank) / logMaxRank) * chartW + 8;
      const y = padT + chartH - (Math.log10(freq) / logMaxFreq) * chartH - 6;
      ctx.textAlign = 'left';
      ctx.fillText(words[i][0], x, y);
    }
  }

  function render() {
    if (!analysisData) {
      clear();
      ctx.fillStyle = COL_DIM;
      ctx.font = '14px monospace';
      ctx.textAlign = 'center';
      ctx.fillText('введите или выберите текст', canvas.width / 2, canvas.height / 2);
      return;
    }

    switch (currentTab) {
      case 'letters':
        drawBarChart(analysisData.letters, 40, 'pct');
        break;
      case 'words':
        drawBarChart(analysisData.words, 30, 'count');
        break;
      case 'bigrams':
        drawBarChart(analysisData.bigrams, 30, 'count');
        break;
      case 'zipf':
        drawZipf();
        break;
    }
  }

  function updateStats() {
    if (!analysisData) {
      document.getElementById('stat-chars').textContent = '—';
      document.getElementById('stat-words').textContent = '—';
      document.getElementById('stat-unique').textContent = '—';
      document.getElementById('stat-entropy').textContent = '—';
      return;
    }
    document.getElementById('stat-chars').textContent = analysisData.chars;
    document.getElementById('stat-words').textContent = analysisData.wordCount;
    document.getElementById('stat-unique').textContent = analysisData.uniqueWords;
    document.getElementById('stat-entropy').textContent = analysisData.entropy;
  }

  function runAnalysis() {
    analysisData = analyze(source.value);
    updateStats();
    render();
  }

  // --- Events ---

  // Tabs
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentTab = btn.dataset.tab;
      render();
    });
  });

  // Presets
  document.querySelectorAll('.preset-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.preset-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      source.value = PRESETS[btn.dataset.preset] || '';
      runAnalysis();
    });
  });

  // Live typing with debounce
  let timer;
  source.addEventListener('input', () => {
    document.querySelectorAll('.preset-btn').forEach(b => b.classList.remove('active'));
    clearTimeout(timer);
    timer = setTimeout(runAnalysis, 300);
  });

  // Canvas hover — show value
  canvas.addEventListener('mousemove', (e) => {
    if (!analysisData || currentTab === 'zipf') return;

    const rect = canvas.getBoundingClientRect();
    const scaleX = canvas.width / rect.width;
    const mx = (e.clientX - rect.left) * scaleX;

    const data = currentTab === 'letters' ? analysisData.letters
               : currentTab === 'words' ? analysisData.words
               : analysisData.bigrams;
    const maxBars = currentTab === 'letters' ? 40 : 30;
    const slice = data.slice(0, maxBars);
    if (slice.length === 0) return;

    const padL = 50, padR = 20;
    const chartW = canvas.width - padL - padR;
    const barW = Math.max(2, (chartW / slice.length) - 2);
    const gap = (chartW - barW * slice.length) / (slice.length + 1);

    const idx = Math.floor((mx - padL - gap / 2) / (barW + gap));
    if (idx >= 0 && idx < slice.length) {
      render();
      const [label, count] = slice[idx];
      const x = padL + gap + idx * (barW + gap) + barW / 2;

      ctx.fillStyle = '#fff';
      ctx.font = '12px monospace';
      ctx.textAlign = 'center';

      let info;
      if (currentTab === 'letters') {
        info = `${label}: ${count} (${(count / analysisData.totalLetters * 100).toFixed(1)}%)`;
      } else {
        info = `${label}: ${count}`;
      }
      const tw = ctx.measureText(info).width + 16;
      const tx = Math.min(Math.max(tw / 2 + 4, x), canvas.width - tw / 2 - 4);

      ctx.fillStyle = '#1a1a2e';
      ctx.fillRect(tx - tw / 2, 36, tw, 20);
      ctx.strokeStyle = COL;
      ctx.lineWidth = 0.5;
      ctx.strokeRect(tx - tw / 2, 36, tw, 20);
      ctx.fillStyle = '#fff';
      ctx.fillText(info, tx, 50);
    }
  });

  // Resize
  function resize() {
    const rect = canvas.parentElement.getBoundingClientRect();
    const w = Math.min(800, Math.floor(rect.width));
    canvas.width = w;
    canvas.height = Math.floor(w * 0.525);
    render();
  }
  window.addEventListener('resize', resize);

  // Init
  source.value = PRESETS.pushkin;
  resize();
  runAnalysis();
})();
</script>
